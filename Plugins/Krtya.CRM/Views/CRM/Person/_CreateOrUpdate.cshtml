
@model Krtya.CRM.Models.PersonModel
@using  Nop.Web.Framework;

@Html.HiddenFor(model => model.Id)
<div id="person-edit">
    <ul>
        <li @Html.RenderSelectedTabIndex(0, GetSelectedTabIndex())>
            Person Info
        </li>
        <li @Html.RenderSelectedTabIndex(1, GetSelectedTabIndex())>
            Linked Company
        </li>
        
    </ul>
    <div>
        @TabInfo()
    </div>
    <div>
        @TabCompany()
    </div>
</div>
@*save selected tab index*@
<input type="hidden" id="selected-tab-index" name="selected-tab-index" value="@(GetSelectedTabIndex())">

@helper TabInfo()
{ 
   @Html.Partial("~/Plugins/Krtya.CRM/Views/CRM/Person/_CreateOrUpdate.Info.cshtml", Model)
}
@helper TabCompany()
{
   @Html.Partial("~/Plugins/Krtya.CRM/Views/CRM/Person/_CreateOrUpdate.Company.cshtml", Model)
}
<script>
    $(document).ready(function () {
        $("#person-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            select: tabstrip_on_tab_select
        });
    });
</script>